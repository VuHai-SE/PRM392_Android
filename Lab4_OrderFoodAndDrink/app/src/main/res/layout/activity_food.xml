        android:layout_weight="1" />

    <Button
        android:id="@+id/btnDatMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt món"
        android:layout_gravity="center"
        android:layout_margin="20dp" />
</LinearLayout>
